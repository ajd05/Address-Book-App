<h1>Add a New Contact</h1>

<%= form_for([current_user, current_user.contacts.build]) do |f| %>
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </p>
    <p>
        <%= f.label :phone %><br>
        <%= f.text_field :phone %>
    </p>
    <p>
        <%= f.label :address %><br>
        <%= f.text_field :address %>
    </p>
    <p>
        <%= f.label :note %><br>
        <%= f.text_area :note %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    <p>
        <%= link_to 'Back', contacts_home_url %>
    </p>
<% end %>